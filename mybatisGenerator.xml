<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <classPathEntry location="E:\Develop\Utils包\0、手动导入jar包\mysql驱动包\mysql-connector-java-5.1.37-bin.jar"/>

    <context id="context" targetRuntime="MyBatis3">

        <!-- JavaBean 实现 序列化 接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <commentGenerator>
            <!--是否去除自动生成的注释 true：是 false：否-->
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!--数据库连接的信息：用户名、密码、驱动类、连接地址-->
        <jdbcConnection userId="root" password="root" driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://peng-mysqlServer:3306/peng"/>

        <!--默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer，为 true时把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--生成 POJO 类的位置-->
        <javaModelGenerator targetPackage="com.peng.manager.pojo" targetProject="D:\Develop\peng\peng-manager\peng-manager-pojo\src\main\java">
            <!--enableSubPackages:是否让schema作为包的后缀-->
            <property name="enableSubPackages" value="false"/>
            <!--从数据库返回的值被清理前后的空格-->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--mapper 映射文件生成的位置-->
        <sqlMapGenerator targetPackage="com.peng.manager.mapper" targetProject="D:\Develop\peng\peng-manager\peng-manager-dao\src\main\java">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!--mapper 接口的生成位置-->
        <javaClientGenerator targetPackage="com.peng.manager.mapper" type="XMLMAPPER" targetProject="D:\Develop\peng\peng-manager\peng-manager-dao\src\main\java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!--指定数据库表-->
        <table schema="" tableName="tb_content" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_content_category" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_item" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_item_cat" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_item_desc" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_item_param" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_item_param_item" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_order" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_order_item" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_order_shipping" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
        <table schema="" tableName="tb_user" enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true"/>
    </context>
</generatorConfiguration>